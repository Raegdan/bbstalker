<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnMAWatchCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMAWatchDB"
        android:text="My collection" />

    <Button
        android:id="@+id/btnMAHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMAWatchCollection"
        android:text="Help" />

    <Button
        android:id="@+id/btnMAConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMAHelp"
        android:text="Config" />

    <Button
        android:id="@+id/btnMAWatchDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMAWatchCollection"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMAQuery"
        android:text="Watch all database" />

    <Button
        android:id="@+id/btnMAQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnMAWatchDB"
        android:layout_below="@+id/tvMATitle"
        android:text="Query" />

    <EditText
        android:id="@+id/etMAQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnMAQuery"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/btnMAQuery"
        android:layout_below="@+id/tvMATitle"
        android:layout_toLeftOf="@id/btnMAQuery"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvMATitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="(\\ BBStalker v0.1 /)"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal"
        android:typeface="monospace" />

</RelativeLayout>